// tsconfig.worker.json
{
    "compilerOptions": {
        "target": "esnext",
        "lib": ["webworker", "esnext"],
        // IMPORTANT: Change module to "amd" to support the --outFile flag
        "module": "amd", 
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true
        // Remove "noEmit" and "outDir" as we now control the output via the script
    },
    "include": [
        "./loader.ts"
    ],
    "exclude": [
        "node_modules",
        "src",
        "public",
        "build"
    ]
}